{
  "name": "github-summary",
  "version": "1.0",
  "description": "A Chrome extension that automatically generates pull request titles and summaries using OpenAI's GPT-3.5 model. This extension helps developers write better PR descriptions by analyzing the changes and generating comprehensive summaries.",
  "main": "background.js",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "github",
    "chrome-extension",
    "openai",
    "pull-request",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleDirectories": ["node_modules", "src"],
    "testMatch": ["**/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "transform": {},
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
