{
  "name": "github-summary",
  "version": "1.0",
  "description": "A Chrome extension that automatically generates pull request titles and summaries using OpenAI's GPT-3.5 model. This extension helps developers write better PR descriptions by analyzing the changes and generating comprehensive summaries.",
  "main": "background.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "mkdir -p dist && cp -r *.js *.html icons manifest.json dist/ && cd dist && zip -r ../extension.zip ."
  },
  "keywords": [
    "github",
    "chrome-extension",
    "openai",
    "pull-request",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/eslint-parser": "^7.27.1",
    "@types/jest": "^29.5.12",
    "eslint": "^9.26.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/coverage/**",
      "!**/dist/**"
    ],
    "transform": {},
    "transformIgnorePatterns": [],
    "coverageReporters": ["text", "lcov", "json"],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
